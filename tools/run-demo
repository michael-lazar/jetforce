#!/usr/bin/env bash
if [ -z "$1" ]; then
    echo "Usage: $0 <example_name> [args...]" >&2
    echo "Available examples:" >&2
    ls -1 examples/*.py | xargs -n1 basename | sed 's/.py$//' >&2
    exit 1
fi

example_name="$1"
shift

if [ ! -f "examples/${example_name}.py" ]; then
    echo "Error: Example not found: examples/${example_name}.py" >&2
    exit 1
fi

echo "Launcing examples/${example_name}.py..."
echo ""
uv run python "examples/${example_name}.py" "$@"
